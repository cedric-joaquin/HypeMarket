<header class="navbar navbar-expand-md">
        <% if params[:user_id] %>
            <% if @user == current_user %>
                <h1>Your Auctions</h1>
                <%= link_to "Create Auction", new_user_auction_path, class:"btn btn-info float-right" %>
            <% else %>
                <h1><%= "#{@user.username}'s Auctions" %></h1>
            <% end %>
        <% else %>
                <%= link_to "Create Auction", new_auction_path, class:"btn btn-info float-left" %>
        <% end %>
</header>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Item</th>
            <th scope="col">Seller</th>
            <th scope="col">Highest Bid</th>
        </tr>
    </thead>
    <tbody>
        <% @auctions.each do |auction| %>
            <tr>
                <td><%= link_to "#{auction.item}", auction_path(auction) %></td>
                <td><%= link_to "#{auction.seller.username}", user_auctions_path(auction.seller) %></td>
                <td>
                    <% if !auction.bids.empty? %>
                        <%= "$#{auction.bids.highest_bid.bid}" %>
                    <% else %>
                        No bids
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>


